{
  "[typescript]": {
    "editor.defaultFormatter": "jkillian.custom-local-formatters"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "jkillian.custom-local-formatters"
  },
  "accessibility.verbosity.terminal": false,
  "crashReporting.enabled": "off",
  "css.validate": false,
  "cursor.composer.textSizeScale": 1.15,
  "customLocalFormatters.formatters": [
    {
      "command": "shfmt -i 2",
      "languages": [
        "shellscript"
      ]
    },
    {
      "command": "cd $(dirname ${file}) && prettierd --stdin --stdin-filepath ${file}",
      "languages": [
        "typescript",
        "typescriptreact"
      ]
    },
    {
      "command": "alejandra -",
      "languages": [
        "nix"
      ]
    }
  ],
  "editor.accessibilitySupport": "off",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "solid",
  "editor.fontFamily": "Noto Mono",
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.guides.highlightActiveBracketPair": false,
  "editor.guides.highlightActiveIndentation": false,
  "editor.guides.indentation": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.hover.enabled": false,
  "editor.matchBrackets": "never",
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": "off",
  "editor.renderLineHighlight": "none",
  "editor.scrollbar.vertical": "hidden",
  "editor.stickyScroll.enabled": false,
  "editor.suggestSelection": "first",
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  "explorer.decorations.colors": false,
  "extensions.ignoreRecommendations": true,
  "files.enableTrash": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.currentLine.enabled": false,
  "less.validate": false,
  "php.validate.enable": false,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "rust-analyzer.inlayHints.genericParameterHints.const.enable": false,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.lens.debug.enable": false,
  "rust-analyzer.lens.enable": false,
  "rust-analyzer.lens.implementations.enable": false,
  "rust-analyzer.lens.run.enable": false,
  "rust-analyzer.lens.updateTest.enable": false,
  "scss.validate": false,
  "search.decorations.colors": false,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.altClickMovesCursor": false,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.fontFamily": "Noto Mono",
  "terminal.integrated.fontSize": 14,
  "vim.foldfix": true,
  "vim.handleKeys": {
    "<C-b>": false,
    "<C-f>": false,
    "<C-j>": false,
    "<C-p>": false,
    "<C-y>": false
  },
  "vim.leader": "<space>",
  "window.nativeTabs": true,
  "window.newWindowDimensions": "maximized",
  "window.restoreFullscreen": true,
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#ff000055",
    "editor.selectionForeground": "#ffffff",
    "editorCursor.background": "#fff",
    "editorCursor.foreground": "#a0f7cb88",
    "editorRuler.foreground": "#ff333300",
    "list.activeSelectionBackground": "#ffff0022",
    "terminal.selectionBackground": "#9999dd99"
  },
  "workbench.colorTheme": "Iceberg",
  "workbench.editor.decorations.colors": false,
  "workbench.editor.restoreViewState": true,
  "workbench.enableExperiments": false,
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": true
}
